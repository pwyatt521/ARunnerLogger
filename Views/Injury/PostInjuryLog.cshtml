@model Lab8.Controllers.InjuryController.InputInjuryLogModel
@{
    ViewData["Title"] = "PostInjury";
}
<body>
    <h1>
        Post New Injury
    </h1>
    
@using (Html.BeginForm("PostInjuryLog", "Injury", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="InjuryID" value=@Model.InjuryID />
    @Html.ValidationMessageFor(m => m.InjuryID)

    <input type="hidden" name="RehabOptions" value=@Model.RehabOptions />
    @Html.ValidationMessageFor(m => m.RehabOptions)

    <input type="hidden" name="PostedBy" value=@Model.PostedBy />    
    @Html.ValidationMessageFor(m => m.PostedBy)

<div class="form-group">    
    @Html.LabelFor(m=>m.Description, new { @class = "control-label" })
    @Html.TextAreaFor(m=>m.Description, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Description)
</div>
<div class="form-group">    
    @Html.LabelFor(m=>m.Date, new { @class = "control-label" })
    @Html.EditorFor(m=>m.Date, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Date)
</div>
<div class="form-group">    
    @Html.LabelFor(m=>m.RehabID, new { @class = "control-label" })
    @Html.EditorFor(m=>m.RehabID, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.RehabID)
</div>
<div class="form-group">    
    @Html.LabelFor(m=>m.Rating, new { @class = "control-label" })
    @Html.EditorFor(m=>m.Rating, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Rating)
</div>
   <button type="submit" class="btn btn-primary">Post Injury Log</button>
}

<ul class="list-group">
    <li class="list-group-item">
        <div class="row">
            <div class="col-md-8">
                <strong>Name</strong>
            </div>
            <div class="col-md-4">
                <strong>ID</strong>
            </div>
        </div>
    </li>
    @foreach (var Options in Model.RehabOptions)
    {
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-8">
                    @Options.Name
                </div>
                <div class="col-md-4">
                    @Options.ID
                </div>
            </div>
        </li>
    }
</ul>
</body>