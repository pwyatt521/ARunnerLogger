@model IEnumerable<InjuryModel>
@{
    ViewData["Title"] = "Book";
}
<body>
    <h1>
        Injury
    </h1>
    <h2>
    <div>
            <a asp-area="" asp-controller="Injury" asp-action="PostBlog">Post Injury Log</a>
    </div>
    </h2>
<ul class="list-group">
    @foreach (var Book in Model)
    {
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-10">
                    <p>
                        <a href="@Url.Action("View", "Injury", new { @id = Book.ID })">@Book.BTitle</a>
                    </p>
                </div>
                <div class="col-md-2">
                    <form class ="form-inline" asp-action="Delete" asp-controller="Injury" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Book.ID" />
                        <button type="submit" class="btn btn-danger"><i class="fas fa-times"></i></button>
                    </form>
                </div>
            </div>
        </li>

    }
</ul>
</body>