@model IEnumerable<NewsModel>
@{
    ViewData["Title"] = "News";
}
<body>
    <h1>
        News
    </h1>
    <h2>
        <div>
            <a asp-area="" asp-controller="Coach" asp-action="PostNews">Post News</a>
        </div>
    </h2>
<ul class="list-group">
    @foreach (var news in Model)
    {
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-10">
                    <p>
                        <a href="@Url.Action("View", "Coach", new { @id = news.ID })">@news.Title</a>
                    </p>
                </div>
                <div class="col-md-2">
                    <form class ="form-inline" asp-action="Delete" asp-controller="Coach" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@news.ID" />
                        <button type="submit" class="btn btn-danger"><i class="fas fa-times"></i></button>
                    </form>
                </div>
            </div>
        </li>

    }
</ul>
</body>